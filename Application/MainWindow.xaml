<Window x:Name="MainWindow1" x:Class="autoteambuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autoteambuilder"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000" MinWidth="1000
        " MinHeight="1000" ScrollViewer.VerticalScrollBarVisibility="Disabled" Closing="OnClosing" >
    <Window.Resources>
        <local:LowercaseToNamecaseConverter x:Key="LowercaseToNamecaseConverter" />
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <DataTemplate x:Key="boxPokemon">
            <StackPanel>
                <Image Source="{Binding Path=Sprites.FrontDefault}" MaxHeight="35"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid Background="#FF242424">
        <Canvas HorizontalAlignment="Left" Height="215" VerticalAlignment="Top" Width="225" Margin="10,10,0,0">
            <Label Content="Team" Foreground="#FFF3F3F3" Height="30" Width="225" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Canvas.Top="0" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
            <ComboBox x:Name="comboPoke1" IsEnabled="{Binding IsChecked, Converter={StaticResource InverseBooleanConverter}, ElementName=checkLock1}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="0" Canvas.Top="36"/>
            <ComboBox x:Name="comboPoke2" IsEnabled="{Binding IsChecked, Converter={StaticResource InverseBooleanConverter}, ElementName=checkLock2}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="1" Canvas.Top="67"/>
            <ComboBox x:Name="comboPoke3" IsEnabled="{Binding IsChecked, Converter={StaticResource InverseBooleanConverter}, ElementName=checkLock3}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="2" Canvas.Top="99"/>
            <ComboBox x:Name="comboPoke4" IsEnabled="{Binding IsChecked, Converter={StaticResource InverseBooleanConverter}, ElementName=checkLock4}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="3" Canvas.Top="130"/>
            <ComboBox x:Name="comboPoke5" IsEnabled="{Binding IsChecked, Converter={StaticResource InverseBooleanConverter}, ElementName=checkLock5}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="4" Canvas.Top="162"/>
            <ComboBox x:Name="comboPoke6" IsEnabled="{Binding IsChecked, Converter={StaticResource InverseBooleanConverter}, ElementName=checkLock6}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="5" Canvas.Top="194"/>
            <CheckBox x:Name="checkLock1" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="205" Canvas.Top="39"/>
            <CheckBox x:Name="checkLock2" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="205" Canvas.Top="71"/>
            <CheckBox x:Name="checkLock3" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="205" Canvas.Top="102"/>
            <CheckBox x:Name="checkLock4" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="205" Canvas.Top="134"/>
            <CheckBox x:Name="checkLock5" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="205" Canvas.Top="167"/>
            <CheckBox x:Name="checkLock6" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="205" Canvas.Top="200"/>
        </Canvas>
        <ComboBox x:Name="comboPokemonVariety" DisplayMemberPath="Name" HorizontalAlignment="Right" Width="200" IsEditable="True" Tag="5" Height="20" VerticalAlignment="Top" Margin="0,293,10,0"/>
        <ComboBox x:Name="comboPokedex" HorizontalAlignment="Right" VerticalAlignment="Top" Width="200" IsEditable="True" Tag="5" SelectionChanged="OnChangePokedexCombo" Margin="0,266,10,0"/>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,318,40,0">
            <TextBlock Text="&#x1F878;" Foreground="#FFF3F3F3" />
            <Button Content="Add" Width="140" Click="OnClickAddToBox" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,343,40,0">
            <TextBlock Text="&#x1F878;" Foreground="#FFF3F3F3" />
            <Button Content="Add Random Pokemon" Width="140" Click="OnClickAddToBox" Margin="10,0,0,0" Tag="random"/>
        </StackPanel>
        <Button Content="Clear Storage" Click="OnClickClearStorage" Margin="0,393,40,0" HorizontalAlignment="Right" Width="140" Height="20" VerticalAlignment="Top"/>
        <Button Content="Remove Selected" Click="OnClickRemoveSelected" Margin="0,368,40,0" HorizontalAlignment="Right" Width="140" Height="20" VerticalAlignment="Top"/>
        <Button Content="Build Team" HorizontalAlignment="Left" Margin="513,127,0,0" VerticalAlignment="Top" Click="OnClickBuildTeam" Width="75" Height="20"/>
        <ListView x:Name="listBox" Margin="10,265,215,515" Background="#FF3F3F3F" HorizontalContentAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Disabled" KeyDown="OnKeyDown">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}" >
                    <Setter Property="ToolTip" >
                        <Setter.Value>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Label x:Name="labelWeighting" Content="" HorizontalAlignment="Left" Margin="613,8,0,0" VerticalAlignment="Top" Foreground="#FFF3F3F3" Height="26" Width="10"/>
        <Label Content="Score:" HorizontalAlignment="Left" Margin="618,100,0,0" VerticalAlignment="Top" Foreground="#FFF3F3F3" Height="26" Width="42"/>
        <Label Content="Pokemon Storage" Foreground="#FFF3F3F3" Height="30" Width="225" FontWeight="Bold" FontSize="16" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,230,0,0"/>
        <Label Content="National Pokedex" Foreground="#FFF3F3F3" Height="30" Width="200" FontWeight="Bold" FontSize="16" HorizontalContentAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="790,230,10,0"/>
    </Grid>
</Window>

@using Type = PokeApiNet.Type
@using pokeAutoBuilder.Shared.Panes

<MudPaper Style="background: var(--mud-palette-background)" Elevation="4">
	<MudGrid Class="pa-4" Justify="Justify.Center">
		<MudItem xs="12" sm="12" md="6" lg="6">
			<MudStack>
				<PokemonTeamDefensePane Team="@Team" />
				<PokemonTeamCoveragePane Team="@Team" />
			</MudStack>
		</MudItem>
		<MudItem xs="12" sm="12" md="6" lg="6">
			<PokemonTeamStatsChartPane Team="@Team"/>
		</MudItem>
	</MudGrid>
</MudPaper>

@code {
	[Parameter]
	public PokemonTeam? Team { get; set; }
}

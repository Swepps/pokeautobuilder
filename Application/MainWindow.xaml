<Window x:Name="MainWindow1" x:Class="autoteambuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autoteambuilder"
        mc:Ignorable="d"
        Title="MainWindow" Height="670" Width="700" MinWidth="700" MinHeight="670" MaxHeight="670" MaxWidth="700" ScrollViewer.VerticalScrollBarVisibility="Disabled" ResizeMode="NoResize">
    <Grid Background="#FF242424" Margin="0,0,0,0">
        <ComboBox x:Name="comboPoke1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="0"/>
        <ComboBox x:Name="comboPoke2" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="1"/>
        <ComboBox x:Name="comboPoke3" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="2"/>
        <ComboBox x:Name="comboPoke4" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="3"/>
        <ComboBox x:Name="comboPoke5" HorizontalAlignment="Left" Margin="10,118,0,0" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="4"/>
        <ComboBox x:Name="comboPoke6" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="5"/>
        <DataGrid x:Name="gridResults" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,172,10,10" Width="NaN" Background="#FF222222" AutoGenerateColumns="False" ColumnWidth="*" AlternatingRowBackground="#FF535353" AreRowDetailsFrozen="True" RowHeight="20" HeadersVisibility="Column" HorizontalScrollBarVisibility="Disabled" CanUserSortColumns="False" CanUserReorderColumns="False" HorizontalGridLinesBrush="{x:Null}" VerticalGridLinesBrush="#FF505050" EnableRowVirtualization="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" ColumnHeaderHeight="90" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden" IsHitTestVisible="False">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#FF474747" />
                    <Setter Property="Foreground" Value="#FFE3E3E3" />
                    <Setter Property="BorderBrush" Value="#FF2F2F2F" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF3B3B3B" />
                    <Setter Property="Foreground" Value="#FFE3E3E3" />
                    <Setter Property="BorderBrush" Value="#FF2F2F2F" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="VerticalContentAlignment" Value="Bottom" />
                    <Setter Property="Padding" Value="0, 0, 0, 5" />
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
        <Label x:Name="labelWeighting" Content="" HorizontalAlignment="Left" Margin="406,141,0,0" VerticalAlignment="Top" Foreground="#FFF3F3F3"/>
        <Label Content="Score:" HorizontalAlignment="Left" Margin="359,141,0,0" VerticalAlignment="Top" Foreground="#FFF3F3F3"/>
    </Grid>
    <Window.Resources>
        <local:LowercaseToNamecaseConverter x:Key="LowercaseToNamecaseConverter" />
        <DataTemplate x:Key="headerPokemon">
            <StackPanel>
                <Image Source="{Binding Path=Sprites.FrontDefault}" MaxHeight="70"/>
                <TextBlock Text="{Binding Path=Name, Converter={StaticResource LowercaseToNamecaseConverter}}" HorizontalAlignment="Center" FontWeight="Bold" Typography.Capitals="AllPetiteCaps"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
</Window>

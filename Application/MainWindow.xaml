<Window x:Name="MainWindow1" x:Class="autoteambuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autoteambuilder"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="700" MinWidth="700" MinHeight="700" ScrollViewer.VerticalScrollBarVisibility="Disabled" Closing="OnClosing" SizeChanged="OnWindowResize">
    <Window.Resources>
        <local:LowercaseToNamecaseConverter x:Key="LowercaseToNamecaseConverter" />
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <DataTemplate x:Key="headerPokemon">
            <StackPanel>
                <Image Source="{Binding Path=Sprites.FrontDefault}" MaxHeight="70"/>
                <TextBlock Text="{Binding Path=Name, Converter={StaticResource LowercaseToNamecaseConverter}}" HorizontalAlignment="Center" FontWeight="Bold"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="boxPokemon">
            <StackPanel>
                <Image Source="{Binding Path=Sprites.FrontDefault}" MaxHeight="35"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid Background="#FF242424">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="509.04"/>
        </Grid.RowDefinitions>

        <Grid HorizontalAlignment="Left" Height="158" Margin="10,0,0,0" VerticalAlignment="Center" Width="225">
            <ComboBox x:Name="comboPoke1" IsEnabled="{Binding IsChecked, Converter={StaticResource InverseBooleanConverter}, ElementName=checkLock1}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="0"/>
            <ComboBox x:Name="comboPoke2" IsEnabled="{Binding IsChecked, Converter={StaticResource InverseBooleanConverter}, ElementName=checkLock2}" HorizontalAlignment="Left" Margin="0,27,0,0" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="1"/>
            <ComboBox x:Name="comboPoke3" IsEnabled="{Binding IsChecked, Converter={StaticResource InverseBooleanConverter}, ElementName=checkLock3}" HorizontalAlignment="Left" Margin="0,54,0,0" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="2"/>
            <ComboBox x:Name="comboPoke4" IsEnabled="{Binding IsChecked, Converter={StaticResource InverseBooleanConverter}, ElementName=checkLock4}" HorizontalAlignment="Left" Margin="0,81,0,0" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="3"/>
            <ComboBox x:Name="comboPoke5" IsEnabled="{Binding IsChecked, Converter={StaticResource InverseBooleanConverter}, ElementName=checkLock5}" HorizontalAlignment="Left" Margin="0,108,0,0" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="4"/>
            <ComboBox x:Name="comboPoke6" IsEnabled="{Binding IsChecked, Converter={StaticResource InverseBooleanConverter}, ElementName=checkLock6}" HorizontalAlignment="Left" Margin="0,135,0,0" VerticalAlignment="Top" Width="200" IsEditable="True" SelectionChanged="OnChangeTeam" Tag="5"/>
            <CheckBox x:Name="checkLock1" Content="" HorizontalAlignment="Left" Margin="205,3,0,0" VerticalAlignment="Top"/>
            <CheckBox x:Name="checkLock2" Content="" HorizontalAlignment="Left" Margin="205,30,0,0" VerticalAlignment="Top"/>
            <CheckBox x:Name="checkLock3" Content="" HorizontalAlignment="Left" Margin="205,57,0,0" VerticalAlignment="Top"/>
            <CheckBox x:Name="checkLock4" Content="" HorizontalAlignment="Left" Margin="205,84,0,0" VerticalAlignment="Top"/>
            <CheckBox x:Name="checkLock5" Content="" HorizontalAlignment="Left" Margin="205,111,0,0" VerticalAlignment="Top"/>
            <CheckBox x:Name="checkLock6" Content="" HorizontalAlignment="Left" Margin="205,138,0,0" VerticalAlignment="Top"/>

        </Grid>

        <DataGrid x:Name="gridResults" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,0,10,12" Width="NaN" Background="#FF222222" AutoGenerateColumns="False" ColumnWidth="*" AlternatingRowBackground="#FF535353" AreRowDetailsFrozen="True" RowHeight="{Binding AutoRowHeight, ElementName=MainWindow1}" HeadersVisibility="Column" HorizontalScrollBarVisibility="Disabled" CanUserSortColumns="False" CanUserReorderColumns="False" HorizontalGridLinesBrush="{x:Null}" VerticalGridLinesBrush="#FF505050" EnableRowVirtualization="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" ColumnHeaderHeight="92" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden" IsHitTestVisible="False" Height="484" VerticalAlignment="Bottom" Grid.Row="1">
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Background" Value="#FF474747" />
                    <Setter Property="Foreground" Value="#FFE3E3E3" />
                    <Setter Property="BorderBrush" Value="#FF2F2F2F" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#FF3B3B3B" />
                    <Setter Property="Foreground" Value="#FFE3E3E3" />
                    <Setter Property="BorderBrush" Value="#FF2F2F2F" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="VerticalContentAlignment" Value="Bottom" />
                    <Setter Property="Padding" Value="0, 0, 0, 5" />
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
        <Label x:Name="labelWeighting" Content="" HorizontalAlignment="Left" Margin="613,8,0,0" VerticalAlignment="Top" Foreground="#FFF3F3F3" Height="26" Width="10"/>
        <Label Content="Score:" HorizontalAlignment="Left" Margin="566,8,0,0" VerticalAlignment="Top" Foreground="#FFF3F3F3" Height="26" Width="42"/>
        <ListView x:Name="listBox" Margin="240,11,0,74" Background="#FF3F3F3F" HorizontalContentAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Disabled" KeyDown="OnKeyDown" HorizontalAlignment="Left" Width="200">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}" >
                    <Setter Property="ToolTip" >
                        <Setter.Value>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Grid HorizontalAlignment="Left" Margin="240,0,0,10" Width="382" Height="58" VerticalAlignment="Bottom">

            <ComboBox x:Name="comboPokedex" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" IsEditable="True" Tag="5" SelectionChanged="OnChangePokedexCombo"/>
            <ComboBox x:Name="comboPokemonVariety" DisplayMemberPath="Name" HorizontalAlignment="Left" Margin="0,30,0,0" Width="200" IsEditable="True" Tag="5" Height="20" VerticalAlignment="Top"/>

            <Button Content="Add Random Pokemon" HorizontalAlignment="Left" Margin="242,1,0,0" VerticalAlignment="Top" Width="140" Click="OnClickAddToBox" Tag="random"/>
            <Button Content="Add" HorizontalAlignment="Left" Margin="205,1,0,0" VerticalAlignment="Top" Width="32" Click="OnClickAddToBox"/>
        </Grid>
        <Button Content="Build Team" HorizontalAlignment="Left" Margin="483,11,0,0" VerticalAlignment="Top" Click="OnClickBuildTeam" Width="75" Height="20"/>
    </Grid>
</Window>

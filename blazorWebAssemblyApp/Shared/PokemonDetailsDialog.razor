@using pokeAutoBuilder.Shared.Cards
@using pokeAutoBuilder.Shared.Panes

<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12" sm="4">
                <MudPaper Class="py-2">
                    <PokemonCard Pokemon="@Pokemon" />
                </MudPaper>
            </MudItem>
            <MudItem xs="12" sm="8">
                <PokemonStatsChartPane Pokemon="@Pokemon" />
            </MudItem>
            <MudItem xs="12" sm="6">
                <PokemonDefensePane Pokemon="@Pokemon" />
            </MudItem>
            <MudItem xs="12" sm="6">
                <PokemonCoveragePane Pokemon="@Pokemon" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public SmartPokemon? Pokemon { get; set; }

    void Submit() => MudDialog!.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog!.Cancel();
}

<MudPaper Class="d-flex mud-width-full mud-height-full pa-2">
	<div class="d-flex flex-wrap justify-start align-content-start" style="overflow: auto;">
		@foreach (SmartPokemon p in Globals.PokemonStorage)
		{
			<PokemonMiniCard Pokemon="p" OnUpdated="Update" />
		}
	</div>
</MudPaper>

@code {
	[Parameter] // used for telling the parent of the card that it has updated
	public EventCallback OnUpdated { get; set; }

	public void Update()
	{
		StateHasChanged();
	}
}
